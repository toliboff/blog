<%= render partial: 'shared/header' %>

<%= render partial: 'user', locals: {user: @user} %>
<div class="bio">
<h2>Bio</h2>
<p>
  <%= @user.bio %>
</p>
</div>


<ul class="posts wo-comments">
  <% @user_posts.each do |post| %>
    <%= render partial:'posts/post', locals:{post: post, users: @users, comments: @comments}%>
  <% end %>
</ul>
<% unless @user_posts.count < 1 %>
<button>See all posts</button>
<% end %>
<%= link_to "See all post", user_posts_path(@user.id) %>